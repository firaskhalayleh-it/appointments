platform :ios, '13.0'

# Disable CocoaPods stats for faster builds.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

source 'https://cdn.cocoapods.org/'

# Require Flutter's podhelper.rb using ENV['FLUTTER_ROOT']
require File.join(ENV['FLUTTER_ROOT'], 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Firebase Pods
  pod 'FirebaseCore'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Firestore'

  # Install all pods for your Flutter project
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Additional build settings from podhelper.rb
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Make sure iOS deployment target is set to 13.0
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # Example: enable camera and photo permissions in Info.plist
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_PHOTOS=1',
        'PERMISSION_PHOTOS_ADD_ONLY=1'
      ]

      # Disable bitcode for faster compilation and fewer issues
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
